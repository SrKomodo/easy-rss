{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "EasyRSS",
  "description": "A simple and easy to use RSS reader extension for firefox and chrome",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "images/action-16.png",
      "24": "images/action-24.png",
      "32": "images/action-32.png"
    },
    "default_title": "EasyRSS",
    "default_popup": "popup/index.html"
  },

  "permissions": [
    "storage",
    "alarms"
  ]
}