{
  "applications": {
    "gecko": {
      "id": "easyrss@srkomodo.com",
      "strict_min_version": "50.0"
    }
  },

  "manifest_version": 2,
  "version": "1.0.0",

  "name": "Easy RSS",
  "description": "Finally an actually usable RSS reader",
  "homepage_url": "https://github.com/SrKomodo/easy-rss",
  "developer": {
    "name": "SrKomodo",
    "url": "https://github.com/SrKomodo"
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "Easy RSS",
    "default_popup": "popup.html",
    "theme_icons": [
      {
        "light": "logo_light.svg",
        "dark": "logo_dark.svg",
        "size": 16
      },
      {
        "light": "logo_light.svg",
        "dark": "logo_dark.svg",
        "size": 32
      }
    ]
  }
}
